extends layout

block content
  h1= title
  p Hey! Welcome to #{title}
  button(type="button", class="btn btn-primary", onclick="doBump()") Press Me
  <br />
  div(id="bump") Bump the count
  <br />
  script.
      var count = 0;
      var bump = 1;
      function doBump() {
          count+=bump;
          bump+=1;
          document.getElementById("bump").innerHTML=`Count ${count} bump ${bump}`;
    } 
  
  a(href="http://localhost:3000/animals") Click here to go to animals page